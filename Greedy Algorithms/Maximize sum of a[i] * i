#include<bits/stdc++.h> 
using namespace std; 
  
int maxSum(int a[], int n) {   
  sort(a, a + n); 
  int sum = 0; 
  for (int i = 0; i < n; i++) 
    sum += (a[i]*i); 
  
  return sum; 
} 
  
int main() 
{ 
  int a[] = { 3, 5, 6, 1 }; 
  int n = sizeof(a)/sizeof(a[0]);   
  cout << maxSum(a, n) << endl; 
  return 0; 
}  
